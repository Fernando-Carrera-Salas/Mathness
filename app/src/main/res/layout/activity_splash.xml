<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v_background_splash"
        android:visibility="visible"
        android:background="@color/mth_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.kotlin.mathness.view.BackgroundAnimation
        android:id="@+id/rl_bg_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.kotlin.mathness.view.BackgroundAnimation>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_1_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_2_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_3_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_4_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_5_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_6_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_7_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_8_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/iv_logo_9_splash"
            android:paddingTop="50dp"
            android:src="@drawable/logo9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_click_splash"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_menu_splash"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.kotlin.mathness.view.SquareRelativeLayout
            android:id="@+id/rl_difficulty"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_difficulty_easy_splash"
                android:src="@drawable/diff_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_difficulty_medium_splash"
                android:src="@drawable/diff_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_difficulty_hard_splash"
                android:src="@drawable/diff_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1.4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/rl_bt_difficulty_easy_splash"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_bt_difficulty_easy_splash"
                            android:src="@drawable/character_easy_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <View
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:id="@+id/rl_bt_difficulty_hard_splash"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_bt_difficulty_hard_splash"
                            android:src="@drawable/character_hard_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </com.kotlin.mathness.view.SquareRelativeLayout>
        <com.kotlin.mathness.view.SquareRelativeLayout
            android:layout_marginBottom="-100dp"
            android:layout_above="@id/rl_difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1.4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_weight="1.1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:id="@+id/rl_bt_difficulty_medium_splash"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_bt_difficulty_medium_splash"
                            android:src="@drawable/character_medium_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <View
                        android:layout_weight="1.1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </com.kotlin.mathness.view.SquareRelativeLayout>
        <com.kotlin.mathness.view.SquareRelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_difficulty_select_splash"
                android:src="@drawable/diff_arrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_weight="1.4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <com.kotlin.mathness.view.SquareRelativeLayout
                        android:layout_weight="1.45"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/play_button"
                            android:id="@+id/iv_bt_play_splash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </com.kotlin.mathness.view.SquareRelativeLayout>
                    <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </com.kotlin.mathness.view.SquareRelativeLayout>
        <LinearLayout
            android:layout_marginBottom="-20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_above="@id/rl_difficulty"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <com.kotlin.mathness.view.SquareRelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">
                    <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                        android:id="@+id/mfl_level_easy_splash"
                        app:porterduffxfermode="DST_IN"
                        app:mask="@drawable/level_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.yangp.ypwaveview.YPWaveView
                            android:id="@+id/ypwv_level_easy_splash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:animatorEnable="true"
                            app:textHidden="true"
                            app:shapeType="square"
                            app:frontColor="@color/mth_yellow"
                            app:behideColor="@color/transparent"
                            android:background="#55000000"
                            app:max="100"
                            app:progress="0"
                            app:strong="60"/>
                        <TextView
                            android:text="1"
                            android:id="@+id/tv_level_easy_splash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:shadowColor="@color/black"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"/>
                    </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>
                </com.kotlin.mathness.view.SquareRelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <com.kotlin.mathness.view.SquareRelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="60dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">
                    <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                        android:id="@+id/mfl_level_medium_splash"
                        app:porterduffxfermode="DST_IN"
                        app:mask="@drawable/level_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.yangp.ypwaveview.YPWaveView
                            android:id="@+id/ypwv_level_medium_splash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:animatorEnable="true"
                            app:textHidden="true"
                            app:shapeType="square"
                            app:frontColor="@color/mth_yellow"
                            android:background="#55000000"
                            app:max="100"
                            app:progress="0"
                            app:strong="60"/>
                        <TextView
                            android:text="1"
                            android:id="@+id/tv_level_medium_splash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:shadowColor="@color/black"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"/>
                    </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>
                </com.kotlin.mathness.view.SquareRelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <com.kotlin.mathness.view.SquareRelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">
                    <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                        android:id="@+id/mfl_level_hard_splash"
                        app:porterduffxfermode="DST_IN"
                        app:mask="@drawable/level_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.yangp.ypwaveview.YPWaveView
                            android:id="@+id/ypwv_level_hard_splash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:animatorEnable="true"
                            app:textHidden="true"
                            app:shapeType="square"
                            app:frontColor="@color/mth_yellow"
                            android:background="#55000000"
                            app:max="100"
                            app:progress="0"
                            app:strong="60"/>
                        <TextView
                            android:text="1"
                            android:id="@+id/tv_level_hard_splash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:shadowColor="@color/black"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"/>
                    </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>
                </com.kotlin.mathness.view.SquareRelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:padding="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_stats_splash"
                android:src="@drawable/trophy_button"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_version_splash"
            android:textSize="12sp"
            android:padding="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>