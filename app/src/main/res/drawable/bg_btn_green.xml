<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/mth_green"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#55000000"/>
            <stroke
                android:color="@color/mth_green"
                android:width="2dp"/>
        </shape>
    </item>
</selector>