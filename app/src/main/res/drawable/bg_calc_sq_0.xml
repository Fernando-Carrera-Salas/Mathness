<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="#33ffffff"/>
                    <corners
                        android:radius="20dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <stroke
                        android:color="#55ffffff"
                        android:width="1dp"/>
                    <corners
                        android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="#33000000"/>
                    <corners
                        android:radius="20dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <stroke
                        android:color="#55000000"
                        android:width="1dp"/>
                    <corners
                        android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>